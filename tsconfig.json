{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "skipLibCheck": true,
    "types": ["vite-svg-loader", "vite/client"],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/demo/*": [
        "./demo/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "demo/**/*.ts",
    "demo/**/*.vue",
    "./*.ts",
    "./*.d.ts",
    "./**/postcss.config.js",
    "./**/tailwind.config.js",
    "src/tailwindPlugin.js",
    "vite.config.mts", 
    "postcss.config.cjs"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}